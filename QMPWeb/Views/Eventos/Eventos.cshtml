@{
    ViewData["Title"] = "Eventos";
}

<!-- PAGE CONTENT -->
    <div class="container-fluid">

        <button class="btn bg-default box-shadow letra-20 letra-de-titulo mt-4" data-target="#eventoForm" data-toggle="modal">
            <i class="fas fa-plus"></i> Agregar nuevo evento 
        </button>

        <div class="row">
    
            <!--TODO:ESTE DIV ES EL QUE SE TIENE QUE LOOPEAR -->
            <div class="col-sm-6 col-md-6 col-lg-4 mt-4">
                <div class="card box-shadow black-card">
                    <div class="card-header">
                        <h3 class="letra-de-titulo">Evento numero #1</h3>
                    </div>
                    <div class="card-body mx-auto">
                        <img src="~/media/evento.jpg" alt="" srcset="" class="img-fluid">
                        <div class="mt-4">
                            <ul class="simple-ls">
                                <li><span>Evento:</span> Cena </li>
                                <li><span>Fecha:</span> 27/08/19 </li>
                                <li><span>Hora:</span> 10 PM </li>
                                <li><span>Lugar:</span> "El Fortin Pizzeria" </li>
                                <li><span>Atuendo elegido:</span> #descripcionDelAtuendo</li>
                                <li><span>Dirección:</span> #direccionDelEvento</li>
                            </ul>
                            <button type="button" class="btn btn-warning btn-block letra-de-titulo" data-target="#atuendos" data-toggle="modal"> <i class="fas fa-user-tie"></i> Elegir atuendo</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- MODAL DE LOS ATUENDOS PARA ELEGIR POR EVENTO -->
            <div class="modal fade" tabindex="-1" id="atuendos">
                <div class="modal-dialog modal-xl modal-dialog-scrollable" role="document">
                    <div class="modal-content bg-default">
                        <div class="modal-header">
                            <h1 class="letra-de-titulo letra-blanca letra-con-sombra">Elegí tu atuendo</h1>
                            <button class="close" data-dismiss="modal">
                                <span>&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="row">

                                <!-- DIV QUE HAY QUE LOOPEAR -->
                                <div class="col-sm-6 col-md-6 col-lg-4 mb-2">
                                    <div class="card black-card">
                                        <div class="card-header">
                                            <h5 class="letra-de-titulo">Nombre del atuendo</h5>
                                        </div>
                                        <div class="card-body">
                                            <h1>Aca tengo que poner las partes del atuendo</h1>
                                        </div>
                                        <div class="card-footer">
                                            <button class="btn btn-success btn-block btn-sm"><i class="fas fa-check"></i> Elegir atuendo</button>
                                        </div>
                                    </div>
                                </div> 

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <!-- FORMULARIO DE CREACION DE EVENTO -->
        <div class="modal fade" id="eventoForm" tabindex="-1" role="dialog" aria-labelledby="eventoForm" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content bg-default">
                    <form action="#" method="#">
                        <div class="modal-header">
                            <h1 class="letra-blanca letra-con-sombra letra-de-titulo">Agrega un nuevo evento</h1>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-md-6 col-sm-12 col-lg-12">
                                    <div class="form-group">
                                        <label>Evento:</label>
                                        <input type="text" class="form-control" placeholder="Ej: Charla de Diseño de Sistemas">
                                    </div>
                                    <div class="form-group">
                                        <label>Fecha:</label>
                                        <input type="date" class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <label>Hora:</label>
                                        <input type="time" class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <label>Lugar:</label>
                                        <input type="text" class="form-control" placeholder="Ej: UTN - Cede Medrano">
                                    </div>
                                    <div class="form-group">
                                        <label>Dirección:</label>
                                        <input type="text" class="form-control" placeholder="Ej: Av. Medrano 951">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-success btn-block mt-1"> <i class="far fa-save"></i> Crear evento</button>
                            <button type="button" class="btn btn-danger btn-block" data-dismiss="modal"> <i class="far fa-trash-alt"></i> Descartar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>