@{
    ViewData["Title"] = "Guardarropas";
}

<!-- PAGE CONTENT -->
    <div class="container-fluid">

        <button type="button" class="btn bg-default box-shadow letra-20 letra-de-titulo mt-4" data-toggle="modal" data-target="#guardarropaForm">
            <i class="fas fa-plus"></i> Agregar nuevo guardarropas
        </button>

        <div class="row">

            <!-- ESTA ES LA CARD QUE TENEMOS QUE LOOPEAR -->
            <div class="col-md-6 col-sm-6 col-lg-3 mt-4">
                <div class="card box-shadow black-card">
                    <div class="card-header">
                        <h1 class="letra-de-titulo">#Nombre</h1>
                    </div>
                    <div class="card-body mx-auto">
                        <img src="~/media/guardarropa.png" class="img-fluid icono-de-guardarropa">
                    </div>
                    <div class="card-footer">
                        <button type="button" class="btn btn-warning btn-block letra-de-titulo" data-toggle="modal" data-target="#prendasModal"><i class="far fa-eye"></i> Ver prendas</button>
                        <button class="btn btn-light btn-block letra-de-titulo" data-toggle="modal" data-target="#guardarropaShare"><i class="fas fa-user-plus"></i> Compartir guardarropa</button>
                        <button class="btn btn-danger btn-block letra-de-titulo"><i class="far fa-trash-alt"></i> Eliminar guardarropa</button>
                    </div>
                </div>
            </div>

        </div>

        <!-- FORMULARIO DE CREACION DE GUARDARROPA -->
        <div class="modal fade" role="dialog" tabindex="-1" id="guardarropaForm">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content bg-default">
                    <form action="#" method="POST">
                        <div class="modal-header">
                            <h1 class="letra-de-titulo letra-blanca letra-con-sombra">Crea un nuevo guardarropa</h1>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="letra-de-titulo">Nombre del guardarropa</label>
                                        <input type="text" class="form-control" name="nombreGuardarropa">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                           <button type="submit" class="btn btn-success btn-block mt-2"><i class="far fa-save"></i> Crear guardarropa</button>
                           <button class="btn btn-danger btn-block" data-dismiss="modal"><i class="far fa-trash-alt"></i> Descartar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- MODAL PARA VISUALIZAR TODAS LAS PRENDAS -->
        <div class="modal fade" role="dialog" tabindex="-1" id="prendasModal">
            <div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable" role="document">
                <div class="modal-content bg-default">
                    <div class="modal-header">
                        <h1 class="letra-de-titulo letra-blanca letra-con-sombra">Prendas del guardarropa <#Nombre> </h1>
                        <button class="close" data-dismiss="modal">
                            <span>&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="row mx-auto">

                            <!-- ESTO ES LO QUE HAY QUE LOOPEAR -->
                            <div class="col-md-4 mb-2">
                                <div class="card black-card">
                                    <div class="card-header">
                                        <h3 class="letra-de-titulo">Prenda #nroPrenda</h3>
                                    </div>
                                    <div class="card-body mx-auto">
                                        <h1>Aca tengo que poner la descripcion de cada prenda</h1>
                                        <button class="btn btn-danger btn-block btn-sm mt-4"><i class="far fa-trash-alt"></i> Eliminar prenda</button>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- MODAL PARA COMPARTIR EL GUARDARROPA -->
        <div class="modal fade" role="dialog" tabindex="-1" id="guardarropaShare">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content bg-default">
                    <form action="#" method="POST">
                        <div class="modal-header">
                            <h1 class="letra-de-titulo letra-blanca letra-con-sombra">Compartí tu guardarropa con un amigue!</h1>
                            <button class="close" data-dismiss="modal">
                                <span>&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <label class="letra-de-titulo">Usuario al que le vas a compartir tu guardarropa</label>
                                <input type="text" class="form-control" placeholder="Nombre de usuario">
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-block btn-success"><i class="fas fa-share-alt"></i> Compartir!</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>